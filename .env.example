# ===============================================
# Variables de Entorno - Star Wars API Serverless
# ===============================================


# ===============================================
# CONFIGURACIÓN DE AWS
# ===============================================

# Región de AWS donde se desplegará el servicio
# Valores comunes: us-east-1, us-east-2, us-west-1, us-west-2, eu-west-1
AWS_REGION=us-east-2

# Nombre de la tabla de DynamoDB para almacenar personajes
# Formato: {service-name}-personajes-{stage}
PERSONAJES_TABLE=starwars-api-personajes-dev

# Stage/Ambiente de despliegue
STAGE=dev

# ===============================================
# CONFIGURACIÓN DE APLICACIÓN
# ===============================================

# Entorno de Node.js
NODE_ENV=development

# Puerto para servidor local (serverless-offline)
PORT=3000

# ===============================================
# CONFIGURACIÓN DE SWAPI (API EXTERNA)
# ===============================================

# URL base de la API de Star Wars
SWAPI_BASE_URL=https://swapi.py4e.com/api

# Timeout para peticiones HTTP a SWAPI (en milisegundos)
SWAPI_TIMEOUT=10000

# ===============================================
# CONFIGURACIÓN DE DYNAMODB LOCAL 
# ===============================================

# Endpoint de DynamoDB Local
# DYNAMODB_ENDPOINT=http://localhost:8000

# ===============================================
# CONFIGURACIÓN DE AWS CREDENTIALS (LOCAL)
# ===============================================
# Solo para desarrollo local - NO usar en producción
# AWS_ACCESS_KEY_ID=tu-access-key-id
# AWS_SECRET_ACCESS_KEY=tu-secret-access-key

# ===============================================
# CONFIGURACIÓN DE LOGS
# ===============================================

# Nivel de logging
# Valores: error, warn, info, debug, trace
LOG_LEVEL=info

