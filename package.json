{
  "name": "starwars-api-serverless",
  "version": "1.0.0",
  "description": "API Serverless para Star Wars - Adaptador de SWAPI con DynamoDB",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node scripts/validate-deployment.js",
    "predeploy": "npm run validate",
    "deploy": "sls deploy",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:staging": "sls deploy --stage staging",
    "deploy:prod": "sls deploy --stage prod",
    "info": "sls info",
    "remove": "sls remove",
    "logs": "sls logs -f",
    "offline": "sls offline start"
  },
  "keywords": [
    "serverless",
    "aws",
    "dynamodb",
    "starwars",
    "swapi"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "axios": "^1.7.9",
    "uuid": "^9.0.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "serverless": "^3.39.0",
    "serverless-offline": "^13.8.1",
    "serverless-dotenv-plugin": "^6.0.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
